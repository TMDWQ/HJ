<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="个人详情"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/personal_background">
        <com.micro.android316.housekeeping.CustomControls.HeadImage
            android:id="@+id/personal_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_head"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/personal_head_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钢琴间的黑白，夹着永不忘的情"
            android:layout_below="@+id/personal_head_title"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:textColor="@color/white_text"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/personal_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/white_text"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/personal_head_img"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账        号"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/tel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="123456789"
            android:textColor="@color/wode_text"
            android:textSize="15sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生        日"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView5" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮        箱"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"
            android:id="@+id/email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身  份  证"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView6" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:maxLength="18"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"
            android:id="@+id/person_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#1598ce"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:text="2016-10-17"
            android:textColor="@color/wode_text"
            android:textSize="15sp"
            android:id="@+id/register_time" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>

</LinearLayout>